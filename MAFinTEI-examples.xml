                      <symbol value="JJ"/>
                     </f>
                </fs>
                <fs xml:id="fs6">
                     <f name="lemma">
                      <string>wallpaper</string>
                     </f>
                     <f name="pos">
                      <symbol value="NN"/>
                     </f>
                </fs>
